pipeline {
    agent any

    tools {
        maven 'Maven3'  
        jdk 'JDK-25'    
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/gloryGloriouse/JavaPipeline.git', branch: 'master'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
    }
}
